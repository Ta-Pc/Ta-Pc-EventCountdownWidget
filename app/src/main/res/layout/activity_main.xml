<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="24dp"
        tools:context=".MainActivity">

        <!-- App Title -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_view_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="24dp"
            android:text="@string/app_name"
            android:textAppearance="?attr/textAppearanceHeadline5"
            android:textAlignment="center"/>

        <!-- Permission Status Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/permission_status_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:contentPadding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/permission_status_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/permission_denied_status"
                    android:textAppearance="?attr/textAppearanceSubtitle1"
                    android:layout_marginBottom="8dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/grant_permission_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/grant_permission"
                    style="@style/Widget.MaterialComponents.Button"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Active Widgets Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:contentPadding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/active_widgets_title"
                    android:textAppearance="?attr/textAppearanceSubtitle1"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/countdown_widgets_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Countdown Widgets: 0"
                    android:textAppearance="?attr/textAppearanceBody2"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/list_widgets_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="List Widgets: 0"
                    android:textAppearance="?attr/textAppearanceBody2"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Actions -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/manage_calendars_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/manage_calendars"
            android:layout_marginBottom="24dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

        <!-- Instructions Card Removed for cleaner dashboard -->

    </LinearLayout>
</ScrollView>